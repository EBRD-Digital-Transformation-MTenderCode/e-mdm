select currency.code as cod, currency.language_code as language, currency_.def as def, currency.description as descript, currency.name as name
from currency currency
left outer join currency_country countries
on currency_.code=countries_.currency_code and currency_.language_code=countries.currency_language_code
left outer join country country2_
on countries1_.country_code=country2_.code and countries1_.country_language_code=country2_.language_code
where currency0_.language_code=? and (country2_.code, country2_.language_code)=(?, ?)